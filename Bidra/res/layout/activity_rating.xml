<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    
    <ImageView
        android:id="@+id/xp_bar"
        android:src="@drawable/lolswak"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        />
    
    
    <ImageView 
        android:id="@+id/screen_shower"
        android:src="@drawable/lolswak"
        android:contentDescription="Shows which screen you're on"
        android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        />
    
    <ImageView 
        android:id="@+id/next_rating"
        android:src="@drawable/lolswak"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_above="@id/screen_shower"
        />
    
    <ImageView 
        android:id="@+id/rating_picture"
        android:src="@drawable/lolswak"
        android:layout_below="@id/xp_bar"
        android:layout_above="@id/next_rating"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        />
    
    
    <ImageView 
        android:id="@+id/rater_bar"
        android:src="@drawable/ic_launcher"
        android:layout_alignBottom="@id/rating_picture"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        />
    
    <TextView
        android:id="@+id/bidrag_tekst"
        android:text="BIDRAGKOMMENTAR"
        android:textAlignment="center"
        android:layout_above="@id/rater_bar"
        android:layout_alignLeft="@id/rating_picture"
        android:layout_alignRight="@id/rating_picture"
        android:layout_height="wrap_content"
        />
    
    
    

</RelativeLayout>
